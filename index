    <script>
    const canvas = document.getElementById("canva");
    const downloadBtn = document.getElementById("downl");
    downloadBtn.addEventListener("click" , () => {
    const dataURL = canvas.toDataURL("png");
    const link = document.createElement("a");
    link.href = dataURL;
    link.download = "Drawing_Relux001.png";
    link.click();
    });
    let city = canvas.getContext("2d");
    let draw = false;
    canvas.addEventListener("mousedown" , down);
    function down(){
    draw = true;
    }
    canvas.addEventListener("mouseup" , up);
    function up(){
    draw = false;
    city.beginPath();
    }
    canvas.addEventListener("mousemove" , move);
    function move(event){
    if (draw===false) return;
    city.lineCap = "round";
    city.lineTo(event.offsetX , event.offsetY);
    city.moveTo(event.offsetX , event.offsetY);
    city.stroke();
    }
    

    c1.addEventListener("click" , () => {
       city.strokeStyle = "red";
    });
    
    c2.addEventListener("click" , () => {
       city.strokeStyle = "blue";
    });

    c3.addEventListener("click" , () => {
       city.strokeStyle = "green";
    });
   
    c4.addEventListener("click" , () => {
       city.strokeStyle = "yellowgreen";
    });

    c5.addEventListener("click" , () => {
       city.strokeStyle = "pink";
    });

    c6.addEventListener("click" , () => {
       city.strokeStyle = "black";
    });

    c7.addEventListener("click" , () => {
       city.strokeStyle = "yellow";
    });

    c8.addEventListener("click" , () => {
    city.strokeStyle = "white";
    });

    c9.addEventListener("click" , () => {
       city.strokeStyle = "brown";
    });

    w0.addEventListener("click" , () => {
       city.lineWidth = 3;
    });
    w1.addEventListener("click" , () => {
       city.lineWidth = 4;
    });

    w2.addEventListener("click" , () => {
       city.lineWidth = 5;
    });

    w3.addEventListener("click" , () => {
       city.lineWidth = 6;
    });

    w4.addEventListener("click" , () => {
       city.lineWidth = 7;
    });

    w5.addEventListener("click" , () => {
       city.lineWidth = 50;
    });

    w6.addEventListener("click" , () => {
       city.lineWidth = 100;
    });
    </script>
